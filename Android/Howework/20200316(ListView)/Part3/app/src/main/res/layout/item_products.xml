<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/productItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    tools:context="com.example.mylistviewapps.ProductsActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/imageViewProductURL"
        android:src="@drawable/ic_notifications"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtProductName"
        android:text="product's name"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageViewProductURL"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/imageViewProductURL" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
       app:layout_constraintStart_toEndOf="@id/txtProductName"
        app:layout_constraintTop_toTopOf="@id/txtProductName" >

    <ImageView
        android:id="@+id/imageViewStream"
        android:src="@drawable/ic_view_stream"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/txtProductName"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageViewClose"
        android:src="@drawable/ic_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/imageViewStream"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="parent"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>